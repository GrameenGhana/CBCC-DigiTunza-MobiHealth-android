<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/LinearLayout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.AudioGalleryActivity" >

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cart_placeholder"
                android:layout_width="@dimen/no_session_logo_size"
                android:layout_height="@dimen/no_session_logo_size"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/no_session"/>

            <TextView
                android:id="@+id/text_placeholder1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_placeholder"
                android:layout_gravity="center"
                android:text="Uh-oh!"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/text_size_medium"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_black_87"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_placeholder1"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginRight="24dp"
                android:textAlignment="center"
                android:text="Nothing here yet."


                />

        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_normal"
            android:text="Please make a selection"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
             />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/first_trimester_audio_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp" >

        </ListView>

    </LinearLayout>

</LinearLayout>