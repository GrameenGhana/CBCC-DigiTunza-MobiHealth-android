<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/empty_view_placeHolder"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cart_placeholder"
            android:layout_width="@dimen/no_session_logo_size"
            android:layout_height="@dimen/no_session_logo_size"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/no_session"/>

        <TextView
            android:id="@+id/text_placeholder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_placeholder"
            android:layout_gravity="center"
            android:text="Uh-Oh!"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/text_size_medium"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_black_87"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_placeholder1"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginRight="24dp"
            android:textAlignment="center"
            android:text="Nothing here yet"


            />

    </LinearLayout>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_3"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"
        />




</RelativeLayout>